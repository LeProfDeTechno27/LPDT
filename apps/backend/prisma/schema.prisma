generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Resource {
  id          Int       @id @default(autoincrement())
  name        String
  url         String
  description String?
  type        String
  label       String
  sequence    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Sequence    Sequence @relation(fields: [sequenceId], references: [id])
  sequenceId  Int
}

model Sequence {
  id        Int        @id @default(autoincrement())
  title     String
  position  Int?
  course    Course     @relation(fields: [courseId], references: [id])
  courseId  Int
  resources Resource[]
}

model Course {
  id          Int        @id @default(autoincrement())
  title       String
  level       String // 5e, 4e, 3e
  coverImage  String? // URL Google Drive
  description String?
  sequences   Sequence[]
}

enum Role {
  SUPADMIN
  GESTIONNAIRE
  PROFESSEUR
  ELEVE
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     Role   @default(ELEVE)
  // Ajoute d'autres champs si besoin
}
